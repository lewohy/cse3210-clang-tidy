{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "act: test",
            "type": "shell",
            "command": "act",
            "args": [
                "--artifact-server-path",
                "/tmp/.artifacts",
                "--eventpath",
                "./event.json",
                "--secret-file",
                ".secrets",
            ],
            "options": {
                "env": {
                    "TMPDIR": "/tmp",
                },
            },
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        },
        {
            "label": "meson: build",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C",
                "builddir"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
    ],
}
